{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
    <section class="container">
        <h2>Se connecter</h2>
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <div class="form-group">
                <label for="login-username">Utilisateur</label>
                <input type="text" class="form-control" id="login-username" value="{{ last_username }}"
                       aria-describedby="usernameHelp" name="username" placeholder="Utilisateur" required autofocus>
            </div>
            <div class="form-group">
                <label for="login-password">Mot de passe</label>
                <input type="password" class="form-control" id="login-password"
                       aria-describedby="passwordHelp" name="password" placeholder="Mot de passe" required>
            </div>
            <input type="hidden" name="_csrf_token"  value="{{ csrf_token('authenticate') }}">

            <button type="submit" class="btn btn-primary"><i class="fas fa-sign-in-alt"></i> Se connecter</button>
        </form>
        <hr>
        <div class="row">
            <div class="col-xl-3"></div>
            <div class="col-md-6 col-xl-3">
                <div class="card">
                    <h5 class="card-header bg-info">Connexion RH</h5>
                    <div class="card-body">
                        Utilisateur : rh
                        <br />
                        Mot de passe : Anael1
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-xl-3">
                <div class="card">
                    <h5 class="card-header bg-info">Connexion utilisateur</h5>
                    <div class="card-body">
                        Utilisateur : anael
                        <br />
                        Mot de passe : Anael1
                    </div>
                </div>
            </div>
            <div class="col-xl-3"></div>
        </div>
    </section>
{% endblock %}