{% extends 'base.html.twig' %}

{% block title %}Hello GameController!{% endblock %}

{% block body %}
    <div class="row myprofile">
        <div class="col-sm-2">
            <img src="http://ssl.gstatic.com/accounts/ui/avatar_2x.png" class="avatar rounded-circle img-thumbnail" alt="avatar">
        </div>
        <div class="col-sm-10">
            <h1>{{ user.nom }} {{ user.prenom }}</h1>
            <ul class="nav nav-tabs" id="profile-tab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link" id="home-tab" data-toggle="tab" href="#dashboard" role="tab" aria-controls="home" aria-selected="true">Competences</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" id="profile-tab" data-toggle="tab" href="#about" role="tab" aria-controls="profile" aria-selected="false">A propos</a>
                </li>
            </ul>
            <div class="tab-content" id="profile-tabcontent">
                <div class="tab-pane fade" id="dashboard" role="tabpanel" aria-labelledby="dashboard-tab">...</div>
                <div class="tab-pane fade show active" id="about" role="tabpanel" aria-labelledby="about-tab">
                    <form id="profile-form" class="col-sm-10">
                        <div class="form-group">
                            <div class="row">
                                <div class="col">
                                    <label for="profile-lastname">Nom</label>
                                    <input type="text" class="form-control" id="profile-lastname" value="{{ user.nom }}">
                                </div>
                                <div class="col">
                                    <label for="profile-firstname">Prenom</label>
                                    <input type="text" class="form-control" id="profile-firstname" value="{{ user.prenom }}">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="profile-username">Username</label>
                            <input type="text" class="form-control" id="profile-username" value="{{ user.username }}">
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col">
                                    <label for="profile-email">Email</label>
                                    <input type="email" class="form-control" id="profile-email" value="{{ user.email }}">
                                </div>
                                <div class="col">
                                    <label for="profile-linkedin">Lien Linkedin</label>
                                    <input type="url" class="form-control" id="profile-linkedin" value="{{ user.LinkLinkedin }}">
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Mettre Ã  jour</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}  
