{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<section class="container">
    <h2>Créer un compte</h2>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username, { 'label': 'Utilisateur' }) }}
        {{ form_row(registrationForm.password, { 'label': 'Mot de passe' }) }}
        {{ form_row(registrationForm.email, { 'label': 'Email' }) }}
        {{ form_row(registrationForm.lastname, { 'label': 'Nom' }) }}
        {{ form_row(registrationForm.firstname, { 'label': 'Prénom' }) }}
        {{ form_row(registrationForm.cguOK, { 'label': 'J\'accepte les règles d\'utilisation de la plateforme' }) }}
        {{ form_row(registrationForm.isRH) }}
        <button type="submit" class="btn btn-success"><i class="fas fa-plus"></i> Créer</button>
    {{ form_end(registrationForm) }}
</section>
{% endblock %}
